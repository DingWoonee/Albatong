<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="3dp"
    android:orientation="vertical"
    android:id="@+id/row_background">
    <View
        android:layout_width="match_parent"
        android:background="#ccc"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="15dp"
        android:layout_height="1.5dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/storeColorView"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/employee_background_main_schedule"/>
        <TextView
            android:id="@+id/scheduleNameText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:layout_marginLeft="9dp"
            android:text="Mom's Touch"
            android:textSize="19sp"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/scheduleStartTimeText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="~"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/scheduleEndText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="00:00"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:id="@+id/scheduleTouchView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>